# Environment Variables for Financial Analysis Platform
# Copy this file to .env and fill in your API keys

# Alpha Vantage API Key (for enhanced stock data and news)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# News API Key (for financial news sentiment analysis)
# Get your free key at: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Twitter API Bearer Token (for social sentiment analysis)
# Get your token at: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Cache Configuration (optional - defaults are usually fine)
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=1000

# Data Source Configuration
DEFAULT_PERIOD=1y
DEFAULT_INTERVAL=1d
MAX_SYMBOLS_PER_REQUEST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=financial_analysis.log
